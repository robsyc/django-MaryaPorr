{
  "version": 2,
  "builds": [
    {
      "src": "django_project/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }
    },
    {
      "src": "build_files.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "staticfiles_build"
      }
    }
  ],
  "routes": [
    {
      "src": "/debug1",
      "dest": "/staticfiles_build/css/bootstrap.css"
    },
    {
      "src": "/debug2",
      "dest": "/static/css/bootstrap.css"
    },
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "django_project/wsgi.py"
    }
  ]
}